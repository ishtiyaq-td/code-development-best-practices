# EditorConfig is awesome: https://EditorConfig.org

##########################################
# Common Settings
##########################################

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

##########################################
# File Extension Settings
##########################################

# Python Files
[*.py]
indent_style = space
indent_size = 4
line_length = 88  # This matches the default line length used by Black.

# Markdown Files
[*.{md,mdx}]
trim_trailing_whitespace = false

# JSON Files
[*.{json,json5,webmanifest}]
indent_style = space
indent_size = 2

# YAML Files
[*.{yml,yaml}]
indent_size = 2

# Bash Files
[*.sh]
end_of_line = lf

# Makefiles
[Makefile]
indent_style = tab
